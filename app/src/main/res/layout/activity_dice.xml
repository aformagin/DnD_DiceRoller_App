                    android:onClick="rollD20"
                    android:text="D20"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnDownD20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
